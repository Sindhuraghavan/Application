<center><h2>List of Items Added</h2></center>
 <center>
<table border="1" cellpadding="8" cellspacing="0" align="center">


<%= paginate @posts %>

<br>
  <tr>
     <th>Item</th>
     <th>Timing</th>
     <th>Type</th>
     <th>Category</th>
     <th>Price</th>
     <th> Currently Available</th>
      <th>View</th>
      <th>Modify</th>
      <th>Delete</th>
  </tr>
 
<% @posts.each do |post| %>

    <tr>
      <td><%= post.Item %></td>
      <td><%= post.Timing %></td>
      <td><%= post.Type %></td>
      <td><%= post.Category %></td>
      <td><%= post.Price %></td>
      <td><% if post.Description=="1" %>
        Yes
        <% else %>
        No
        <% end %></td>
      


      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit',  edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
   </tr>


  <% end %>
  </table>


<br>
<%= link_to 'Add Item', new_post_path %><br>
<br>
<%= link_to 'Back to home ', welcome_index_path %>
